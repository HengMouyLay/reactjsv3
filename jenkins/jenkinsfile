pipeline {
    agent any

    environment {
        DOCKER_CREDENTIALS_ID = 'dockerhub'  // The ID you set for your Docker Hub credentials in Jenkins
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/HengMouyLay/reactjsv3.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    docker.build('hengmouylay/react_js:1.0')
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', DOCKER_CREDENTIALS_ID) {
                        docker.image('hengmouylay/react_js:l1.0atest').push()
                    }
                }
            }
        }
    }
}
