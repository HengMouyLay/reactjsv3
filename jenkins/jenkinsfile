pipeline{
    agent{ 
        docker{
        image 'node"14'
        args '-u root'
        }
}
    tools{
        nodejs 'node-18.9.1'
    }
    stages{
        stage('Get Resource from git'){
            steps{
                git 'https://github.com/HengMouyLay/reactjsv3.git'
            }
        }
        stage('test'){
            steps{
                sh ''' 
                    node -v
                '''
            }
        }
        stage('docker pipeline'){
            steps{
                echo 'Building docker image'
            }
        }
    }
}
